<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://vacancyListView.title"
      focusComponent="vacanciesDataGrid">
  <data>
    <collection id="vacanciesDc"
                class="ru.mindils.jb2.app.entity.Vacancy">
      <fetchPlan extends="_base">
        <property name="employer" fetchPlan="_base">
          <property name="employerInfo" fetchPlan="_base">
          </property>
        </property>
        <property name="vacancyInfo" fetchPlan="_base">
          <property name="vacancy" fetchPlan="_base">
          </property>
        </property>
        <property name="vacancyAnalysis" fetchPlan="_base"/>
      </fetchPlan>
      <loader id="vacanciesDl" readOnly="true">
        <query>
          <![CDATA[select e from jb2_Vacancy e order by e.publishedAt desc]]>
        </query>
      </loader>
    </collection>
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
    <urlQueryParameters>
      <pagination component="pagination"/>
    </urlQueryParameters>
  </facets>
  <actions>
    <action id="selectAction" type="lookup_select"/>
    <action id="discardAction" type="lookup_discard"/>
  </actions>
  <layout>
    <hbox id="buttonsPanel" classNames="buttons-panel">
      <button id="updateFirstAnalysisVacancy" text="Анализ на java"/>
      <button id="updateAnalysisVacancy" text="msg://updateAnalysisFullVacancy.text"/>
      <button id="updateAllVacancy" text="msg://updateAllVacancy.text"/>
      <button id="addPrimaryToQueueBtn" text="msg://analysisVacancyPrimary.text"/>
      <button id="startPrimaryAnalysisBtn" text="msg://startPrimaryAnalysis.text"/>
      <button id="addSocialToQueueBtn" text="msg://analysisVacancySocial.text"/>
      <button id="startSocialAnalysisBtn" text="msg://startSocialAnalysis.text"/>
      <simplePagination id="pagination" dataLoader="vacanciesDl"/>
    </hbox>
    <dropdownButton id="updateVacancyButton" text="Действия">
      <items>
        <textItem id="addVacancyBtn" text="В очередь выбранные вакансии"/>
        <textItem id="addVacancyInFirstLlmQueueBtn" text="В очередь First LLM"/>
        <textItem id="addVacancyInSocialLlmQueueBtn" text="В очередь Social LLM"/>
      </items>
    </dropdownButton>
    <dropdownButton id="chainAnalysisButton"
                    text="msg://chainAnalysisButton.text"
                    icon="CALC">
      <items>
        <textItem id="addToFullChainBtn"
                  text="msg://chainAnalysisButton.addToFullChainBtn.text"/>
        <textItem id="addToPrimaryChainBtn"
                  text="msg://chainAnalysisButton.addToPrimaryChainBtn.text"/>
        <textItem id="addToSocialTechnicalChainBtn"
                  text="msg://chainAnalysisButton.addToSocialTechnicalChainBtn.text"/>
      </items>
    </dropdownButton>
    <propertyFilter property="id" operation="EQUAL" dataLoader="vacanciesDl"/>
    <jpqlFilter id="javaFilter"
                dataLoader="vacanciesDl"
                label="Java"
                labelPosition="ASIDE"
                parameterClass="java.lang.Boolean"
                parameterName="javaParam">
      <condition>
        <c:jpql>
          <!-- 1. связываемся с нужной таблицей -->
          <c:join><![CDATA[
              join jb2_VacancyLlmAnalysis vla
                   on vla.vacancy = {E}
              ]]>
          </c:join>

          <!-- 2. фильтр по типу и содержимому JSON -->
          <c:where><![CDATA[
              vla.analyzeType = 'JAVA_PRIMARY'
              and cast(function('jsonb_extract_path_text', vla.analyzeData, 'java') boolean) = :javaParam
          ]]>
          </c:where>
        </c:jpql>
      </condition>
    </jpqlFilter>
    <dataGrid id="vacanciesDataGrid"
              width="100%"
              minHeight="20em"
              dataContainer="vacanciesDc"
              columnReorderingAllowed="true">
      <actions>
        <action id="readAction" type="list_read">
          <properties>
            <property name="openMode" value="DIALOG"/>
          </properties>
        </action>
      </actions>
      <columns resizable="true">
        <column property="id" autoWidth="true"/>
        <column property="name" autoWidth="true"/>
        <column property="employer.name" autoWidth="true"/>
        <column property="keySkillsStr" width="20em"/>
        <column property="description"/>
        <column property="city" autoWidth="true"/>
        <column property="salary" autoWidth="true"/>
        <column property="metro" autoWidth="true"/>
        <column property="professionalRolesStr" autoWidth="true"/>
        <column property="workFormatStr" autoWidth="true"/>
        <column property="archived" autoWidth="true"/>
        <column property="hidden" autoWidth="true"/>
        <column property="alternateUrl" autoWidth="true"/>
        <column property="publishedAt" autoWidth="true"/>
        <column property="createdAt" autoWidth="true"/>
        <column property="initialCreatedAt" autoWidth="true"/>
        <column property="updatedAt" autoWidth="true"/>
      </columns>
      <contextMenu>
        <item id="contextFullLlmAnalyse" text="Полный llm анализ"/>
      </contextMenu>
    </dataGrid>
    <hbox id="lookupActions" visible="false">
      <button id="selectButton" action="selectAction"/>
      <button id="discardButton" action="discardAction"/>
    </hbox>
  </layout>
</view>