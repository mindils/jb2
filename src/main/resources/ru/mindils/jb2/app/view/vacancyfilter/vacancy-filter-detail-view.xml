<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://vacancyFilterDetailView.title"
      focusComponent="form">
  <data>
    <instance id="vacancyFilterDc"
              class="ru.mindils.jb2.app.entity.VacancyFilter">
      <fetchPlan extends="_base"/>
      <loader id="vacancyFilterDl"/>
    </instance>
    <collection id="vacancyFilterParamsDc" class="ru.mindils.jb2.app.entity.VacancyFilterParams">
      <loader id="vacancyFilterParamsDl" readOnly="true" >
        <query>
          <![CDATA[select e from jb2_VacancyFilterParams e where e.vacancyFilter.id = :vacancyFilterId]]>
        </query>
      </loader>
      <fetchPlan extends="_base"/>
    </collection>
  </data>
  <facets>
    <dataLoadCoordinator auto="true" />
  </facets>
  <actions>
    <action id="saveAction" type="detail_saveClose"/>
    <action id="closeAction" type="detail_close"/>
  </actions>
  <layout>
    <formLayout id="form" dataContainer="vacancyFilterDc">
      <responsiveSteps>
        <responsiveStep minWidth="0" columns="1"/>
        <responsiveStep minWidth="40em" columns="2"/>
      </responsiveSteps>
      <textField id="codeField" property="code"/>
      <textField id="nameField" property="name"/>
    </formLayout>

    <dataGrid id="vacancyFilterParamsDataGrid" dataContainer="vacancyFilterParamsDc" minWidth="100px" width="100%">
      <actions>
        <action id="create" type="list_create">
          <properties>
            <property name="openMode" value="DIALOG"/>
          </properties>
        </action>
        <action id="edit" type="list_edit">
          <properties>
            <property name="openMode" value="DIALOG"/>
          </properties>
        </action>
        <action id="remove" type="list_remove"/>
      </actions>
      <columns>
        <column property="paramName"/>
        <column property="paramValue"/>
      </columns>
    </dataGrid>

    <hbox id="detailActions">
      <button id="saveAndCloseButton" action="saveAction"/>
      <button id="closeButton" action="closeAction"/>
    </hbox>
  </layout>
</view>
