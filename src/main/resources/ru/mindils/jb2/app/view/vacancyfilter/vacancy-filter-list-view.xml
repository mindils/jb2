<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://vacancyFilterListView.title"
      focusComponent="vacancyFiltersDataGrid">
  <data>
    <collection id="vacancyFiltersDc"
                class="ru.mindils.jb2.app.entity.VacancyFilter">
      <fetchPlan extends="_base"/>
      <loader id="vacancyFiltersDl" readOnly="true">
        <query>
          <![CDATA[select e from jb2_VacancyFilter e]]>
        </query>
      </loader>
    </collection>
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
    <urlQueryParameters>
      <genericFilter component="genericFilter"/>
      <pagination component="pagination"/>
    </urlQueryParameters>
  </facets>
  <actions>
    <action id="selectAction" type="lookup_select"/>
    <action id="discardAction" type="lookup_discard"/>
  </actions>
  <layout>
    <genericFilter id="genericFilter"
                   dataLoader="vacancyFiltersDl">
      <properties include=".*"/>
    </genericFilter>
    <hbox id="buttonsPanel" classNames="buttons-panel">
      <button id="createButton" action="vacancyFiltersDataGrid.createAction"/>
      <button id="editButton" action="vacancyFiltersDataGrid.editAction"/>
      <button id="removeButton" action="vacancyFiltersDataGrid.removeAction"/>
      <simplePagination id="pagination" dataLoader="vacancyFiltersDl"/>
    </hbox>
    <dataGrid id="vacancyFiltersDataGrid"
              width="100%"
              minHeight="20em"
              dataContainer="vacancyFiltersDc"
              columnReorderingAllowed="true">
      <actions>
        <action id="createAction" type="list_create"/>
        <action id="editAction" type="list_edit"/>
        <action id="removeAction" type="list_remove"/>
      </actions>
      <columns resizable="true">
        <column property="code"/>
        <column property="name"/>
      </columns>
    </dataGrid>
    <hbox id="lookupActions" visible="false">
      <button id="selectButton" action="selectAction"/>
      <button id="discardButton" action="discardAction"/>
    </hbox>
  </layout>
</view>
