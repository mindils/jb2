<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://employerDetailView.title"
      focusComponent="form">
  <data>
    <instance id="employerDc"
              class="ru.mindils.jb2.app.entity.Employer">
      <fetchPlan extends="_base">
        <property name="employerInfo" fetchPlan="_base"/>
      </fetchPlan>
      <loader id="employerDl"/>
    </instance>
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
  </facets>
  <actions>
    <action id="saveAction" type="detail_saveClose"/>
    <action id="closeAction" type="detail_close"/>
  </actions>
  <layout>
    <formLayout id="form" dataContainer="employerDc">
      <responsiveSteps>
        <responsiveStep minWidth="0" columns="1"/>
        <responsiveStep minWidth="40em" columns="2"/>
      </responsiveSteps>
      <textField id="idField" property="id"/>
      <textField id="nameField" property="name"/>
      <entityPicker id="employerInfoField" property="employerInfo">
        <actions>
          <action id="entityLookupAction" type="entity_lookup"/>
          <action id="entityClearAction" type="entity_clear"/>
        </actions>
      </entityPicker>
    </formLayout>
    <hbox id="detailActions">
      <button id="saveAndCloseButton" action="saveAction"/>
      <button id="closeButton" action="closeAction"/>
    </hbox>
  </layout>
</view>
