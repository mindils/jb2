<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://ChainAnalysisMonitorView.title"
      focusComponent="refreshBtn">
  <data>
    <!-- Пока без data loaders, данные грузим программно -->
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
  </facets>
  <layout>
    <vbox id="mainVBox" padding="true" spacing="true">
      <!-- Заголовок -->
      <h1 text="msg://ChainAnalysisMonitorView.title"/>

      <!-- Статистика очередей -->
      <hbox spacing="true" padding="true">
        <hbox id="queueStatsGroup">
          <h3 text="Статистика очередей"/>
          <vbox spacing="true">
            <hbox spacing="true" alignItems="CENTER">
              <span text="msg://fullChainCountText.text" width="12em"/>
              <p id="fullChainCountText" text="0" classNames="text-xl font-bold"/>
            </hbox>
            <hbox spacing="true" alignItems="CENTER">
              <span text="msg://primaryChainCountText.text" width="12em"/>
              <p id="primaryChainCountText" text="0" classNames="text-xl font-bold"/>
            </hbox>
            <hbox spacing="true" alignItems="CENTER">
              <span text="msg://socialTechnicalChainCountText.text" width="12em"/>
              <p id="socialTechnicalChainCountText" text="0" classNames="text-xl font-bold"/>
            </hbox>
          </vbox>
        </hbox>
      </hbox>

      <!-- Управление workflow -->
      <hbox id="workflowControlGroup">
        <h3 text="Управление цепочками анализа"/>
        <vbox spacing="true">
          <h3 id="chainStatusHeader" text="msg://chainStatusHeader.text"/>

          <hbox spacing="true">
            <button id="startFullChainBtn"
                    text="msg://startFullChainBtn.text"
                    icon="PLAY"
                    themeNames="primary"/>
            <button id="startPrimaryChainBtn"
                    text="msg://startPrimaryChainBtn.text"
                    icon="PLAY"/>
            <button id="startSocialTechnicalChainBtn"
                    text="msg://startSocialTechnicalChainBtn.text"
                    icon="PLAY"/>
          </hbox>
        </vbox>
      </hbox>

      <!-- Управление очередями -->
      <hbox id="queueManagementGroup">
        <h2 text="Управление очередями"/>
        <vbox spacing="true">
          <hbox spacing="true">
            <button id="enqueueNotAnalyzedBtn"
                    text="msg://enqueueNotAnalyzedBtn.text"
                    icon="PLUS"
                    themeNames="success"/>
            <button id="enqueueJavaForSocialTechBtn"
                    text="msg://enqueueJavaForSocialTechBtn.text"
                    icon="PLUS"/>
          </hbox>

          <hbox spacing="true">
            <button id="clearFullChainQueueBtn"
                    text="msg://clearFullChainQueueBtn.text"
                    icon="TRASH"
                    themeNames="error"/>
          </hbox>
        </vbox>
      </hbox>

      <!-- Кнопка обновления -->
      <hbox justifyContent="END">
        <button id="refreshBtn"
                text="msg://refreshBtn.text"
                icon="REFRESH"
                themeNames="contrast"/>
      </hbox>
    </vbox>
  </layout>
</view>