<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://LLMModelListView.title"
      focusComponent="lLMModelsDataGrid">
  <data>
    <collection id="lLMModelsDc"
                class="ru.mindils.jb2.app.entity.LLMModel">
      <fetchPlan extends="_base"/>
      <loader id="lLMModelsDl" readOnly="true">
        <query>
          <![CDATA[select e from jb2_LLMModel e]]>
        </query>
      </loader>
    </collection>
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
    <urlQueryParameters>
      <genericFilter component="genericFilter"/>
      <pagination component="pagination"/>
    </urlQueryParameters>
  </facets>
  <actions>
    <action id="selectAction" type="lookup_select"/>
    <action id="discardAction" type="lookup_discard"/>
  </actions>
  <layout>
    <genericFilter id="genericFilter"
                   dataLoader="lLMModelsDl">
      <properties include=".*"/>
    </genericFilter>
    <hbox id="buttonsPanel" classNames="buttons-panel">
      <button id="createButton" action="lLMModelsDataGrid.createAction"/>
      <button id="editButton" action="lLMModelsDataGrid.editAction"/>
      <button id="removeButton" action="lLMModelsDataGrid.removeAction"/>
      <simplePagination id="pagination" dataLoader="lLMModelsDl"/>
    </hbox>
    <dataGrid id="lLMModelsDataGrid"
              width="100%"
              minHeight="20em"
              dataContainer="lLMModelsDc"
              columnReorderingAllowed="true">
      <actions>
        <action id="createAction" type="list_create"/>
        <action id="editAction" type="list_edit"/>
        <action id="removeAction" type="list_remove"/>
      </actions>
      <columns resizable="true">
        <column property="name"/>
        <column property="modelName"/>
        <column property="baseUrl"/>
        <column property="apiKey"/>
        <column property="priorityOrder"/>
        <column property="enabled"/>
        <column property="isDefault"/>
        <column property="temperature"/>
        <column property="maxTokens"/>
        <column property="timeoutSeconds"/>
        <column property="failureCount"/>
        <column property="lastFailure"/>
        <column property="lastSuccess"/>
        <column property="availableAfter"/>
        <column property="description"/>
        <column property="createdDate"/>
        <column property="lastModifiedDate"/>
      </columns>
    </dataGrid>
    <hbox id="lookupActions" visible="false">
      <button id="selectButton" action="selectAction"/>
      <button id="discardButton" action="discardAction"/>
    </hbox>
  </layout>
</view>
