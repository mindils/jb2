<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
    objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1" author="jb2" runOnChange="true">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="JB2_VACANCY_ANALYSIS_QUEUE"/>
      </not>
    </preConditions>
    <createTable tableName="JB2_VACANCY_ANALYSIS_QUEUE">
      <column autoIncrement="true" name="id" startWith="1" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JB2_VACANCY_ANALYSIS_QUEUE"/>
      </column>
      <column name="vacancy_id" type="VARCHAR(255)"/>
      <column name="type_queue" type="VARCHAR(255)"/>
      <column name="processing" type="BOOLEAN"/>
      <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
      <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
    </createTable>
  </changeSet>
  <changeSet id="2" author="jb2" runOnChange="true">
    <preConditions onFail="MARK_RAN">
      <not>
        <indexExists tableName="JB2_VACANCY_ANALYSIS_QUEUE" indexName="IDX_JB2_VACANCY_ANALYSIS_QUEUE_VACANCY"/>
      </not>
    </preConditions>
    <createIndex indexName="IDX_JB2_VACANCY_ANALYSIS_QUEUE_VACANCY" tableName="JB2_VACANCY_ANALYSIS_QUEUE">
      <column name="vacancy_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>