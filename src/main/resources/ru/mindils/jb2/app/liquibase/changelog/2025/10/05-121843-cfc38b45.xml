<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
    objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1" author="jb2">
    <createTable tableName="JB2_VACANCY_SCORE">
      <column autoIncrement="true" name="ID" startWith="1" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JB2_VACANCY_SCORE"/>
      </column>
      <column name="vacancy_id" type="VARCHAR(255)"/>
      <column name="SCORE" type="INT"/>
      <column name="STATUS" type="VARCHAR(20)"/>
      <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
      <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
    </createTable>
  </changeSet>
  <changeSet id="2" author="jb2">
    <createIndex indexName="IDX_JB2_VACANCY_SCORE_VACANCY" tableName="JB2_VACANCY_SCORE">
      <column name="vacancy_id"/>
    </createIndex>
  </changeSet>
  <changeSet id="3" author="jb2">
    <dropTable cascadeConstraints="true" tableName="jb2_vacancy_analysis"/>
  </changeSet>
  <changeSet id="4" author="jb2">
    <dropTable cascadeConstraints="true" tableName="jb2_vacancy_analysis_queue"/>
  </changeSet>
  <changeSet id="5" author="jb2">
    <dropTable cascadeConstraints="true" tableName="jb2_vacancy_chain_analysis_audit"/>
  </changeSet>
  <changeSet id="6" author="jb2">
    <dropTable cascadeConstraints="true" tableName="jb2_vacancy_chain_analysis_queue"/>
  </changeSet>
  <changeSet id="7" author="jb2">
    <dropTable cascadeConstraints="true" tableName="jb2_vacancy_sync_state"/>
  </changeSet>
</databaseChangeLog>