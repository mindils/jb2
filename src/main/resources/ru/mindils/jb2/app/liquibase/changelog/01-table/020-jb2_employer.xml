<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
    objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1" author="jb2">
    <createTable tableName="JB2_EMPLOYER">
      <column name="id" type="VARCHAR(255)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JB2_EMPLOYER"/>
      </column>
      <column name="name" type="VARCHAR(255)"/>
      <column name="trusted" type="BOOLEAN"/>
      <column name="accredited_it_employer" type="BOOLEAN"/>
      <column name="has_divisions" type="BOOLEAN"/>
      <column name="type" type="VARCHAR(255)"/>
      <column name="description" type="TEXT"/>
      <column name="site_url" type="VARCHAR(255)"/>
      <column name="alternate_url" type="VARCHAR(255)"/>
      <column name="vacancies_url" type="VARCHAR(255)"/>
      <column name="logo_urls" type="jsonb"/>
      <column name="relations" type="jsonb"/>
      <column name="area" type="jsonb"/>
      <column name="industries" type="jsonb"/>
      <column name="branded_description" type="TEXT"/>
      <column name="branding" type="jsonb"/>
      <column name="insider_interviews" type="jsonb"/>
      <column name="open_vacancies" type="INT"/>
      <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
      <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
    </createTable>
  </changeSet>
</databaseChangeLog>