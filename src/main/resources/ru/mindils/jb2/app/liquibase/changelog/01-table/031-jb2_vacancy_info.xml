<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
    objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1" author="jb2" runOnChange="true">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="jb2_vacancy_info"/>
      </not>
    </preConditions>
    <createTable tableName="JB2_VACANCY_INFO">
      <column name="ID" type="VARCHAR(255)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JB2_VACANCY_INFO"/>
      </column>
      <column name="STATUS" type="VARCHAR(255)"/>
      <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
      <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
    </createTable>
  </changeSet>
  <changeSet id="2" author="jb2" runOnChange="true">
    <preConditions onFail="MARK_RAN">
      <columnExists tableName="jb2_vacancy_info" columnName="created_date"/>
    </preConditions>
    <addColumn tableName="jb2_vacancy_info">
      <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
      <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
    </addColumn>
  </changeSet>
</databaseChangeLog>