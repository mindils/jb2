<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
    objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1" author="jb2">
    <createTable tableName="JB2_GENERIC_TASK_QUEUE">
      <column autoIncrement="true" name="ID" startWith="1" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JB2_GENERIC_TASK_QUEUE"/>
      </column>
      <column name="entity_name" type="VARCHAR(255)"/>
      <column name="ENTITY_ID" type="VARCHAR(255)"/>
      <column name="TASK_TYPE" type="VARCHAR(255)"/>
      <column name="PROCESSING" type="BOOLEAN"/>
      <column name="SUCCESS" type="BOOLEAN"/>
      <column name="error_message" type="CLOB"/>
      <column name="PRIORITY" type="INT"/>
      <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
      <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
    </createTable>
  </changeSet>
  <changeSet id="2" author="jb2">
    <addColumn tableName="jb2_vacancy_llm_analysis">
      <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
      <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
    </addColumn>
  </changeSet>
</databaseChangeLog>